
@model TextToSpeech.Models.Post
<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/app.js"></script>

    <style>
        body {
            
            background: url('../../images/0025_Washington-DC_5730767_Full.jpg') no-repeat center center fixed;
            background-size: cover;
            background-size: cover;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("English", "Home"))
    {
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <h4><font color="33CFFF">Please enter a title</font></h4>

                    @Html.LabelFor(m => m.Title, new { @class = "control-label" })
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })

                    <h4><font color="33CFFF">Please enter your text</font></h4>

                    @Html.LabelFor(m => m.Text, new { @class = "control-label" })
                    @Html.TextAreaFor(m => m.Text, 18, 40, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
                  
                    <div class="col-lg-2">
                        <input type="submit" value="Enter" class="btn-lg">
                    </div>
                    <div class="col-lg-2">
                        <button type="button" value="Save" class="btn-lg" onclick="location.href='@Url.Action("Add", "Audios")'">Save</button>
                    </div>
                    <div class="col-lg-2">
                        <button type="button" value="Save" class="btn-lg" onclick="location.href='@Url.Action("Index")'">"Home"</button>
                    </div>

                </div>
                </div>
            </div>
        }

        <br />
        <div id="play">
            <audio controls>
                <source id="play" src="@Url.Action("myaudio")" type="audio/mp3" />
            </audio>
        </div>
    </body>
    </html>
